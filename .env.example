# FEMCL - Fish_Eye Migration Control Layer
# Пример конфигурации переменных окружения

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=Fish_Eye
POSTGRES_USER=alex
POSTGRES_PASSWORD=your_password_here

# Database URI (формат для SQLAlchemy)
DATABASE_URI=postgresql://alex:your_password_here@localhost:5432/Fish_Eye

# Migration Configuration
MIGRATION_TASK_ID=2
MIGRATION_SCHEMA=mcl
MIGRATION_SOURCE_SCHEMA=ags

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/femcl.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Backup Configuration
BACKUP_DIR=database/backups
BACKUP_FORMAT=dump
BACKUP_COMPRESSION=true

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL=300
MONITORING_LOG_FILE=logs/monitoring.log

# Report Configuration
REPORT_DIR=docs/reports
REPORT_FORMAT=json
REPORT_INCLUDE_DIAGRAMS=true

# PlantUML Configuration
PLANTUML_JAR=/usr/share/java/plantuml.jar
PLANTUML_OUTPUT_DIR=docs/diagrams

# Git Configuration
GIT_REPOSITORY=https://github.com/bondalen/femcl.git
GIT_BRANCH=main
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your.email@example.com

# Security Configuration
ENCRYPTION_KEY=your_encryption_key_here
SECRET_KEY=your_secret_key_here

# Performance Configuration
MAX_CONNECTIONS=10
CONNECTION_TIMEOUT=30
QUERY_TIMEOUT=300

# Development Configuration
DEBUG=false
TESTING=false
DEVELOPMENT=false

# Email Configuration (для уведомлений)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_USE_TLS=true

# Slack Configuration (для уведомлений)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#femcl-migration

# Telegram Configuration (для уведомлений)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id